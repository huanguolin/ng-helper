{
  "name": "ng-helper",
  "displayName": "Angular.js Helper",
  "description": "Angular.js Helper for VSCode.",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/huanguolin/ng-helper.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.vscode/ng-helper.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ng-helper.createComponent",
        "title": "Create Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ng-helper.createComponent",
          "group": "1_ngHelper@1",
          "when": "activeViewlet == 'workbench.view.explorer' && explorerResourceIsFolder && resourcePath =~ /components$/ && ng-helper.activated"
        }
      ]
    },
    "typescriptServerPlugins": [
      {
        "name": "@ng-helper/typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run tsc && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run tsc && npm run lint && node esbuild.js --production",
    "package:vsix": "vsce package --yarn --dependencies",
    "tsc": "tsc --noEmit",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@ng-helper/shared": "^0.0.1",
    "@ng-helper/typescript-plugin": "^0.0.1",
    "axios": "^1.7.2",
    "get-port": "^6.1.2"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/vsce": "^2.29.0",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.4.5"
  }
}
