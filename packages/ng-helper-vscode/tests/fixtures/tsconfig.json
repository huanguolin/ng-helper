{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "DOM",
            "ES2017",
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": false,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "./app/**/*.ts",
        "./app/**/*.js",
    ],
}