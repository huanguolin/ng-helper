{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "./src",
		"strict": true, /* enable all strict type-checking options */
		"esModuleInterop": true,
		"noEmit": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"tests" /* tests 下有自己的 tsconfig.json */
	]
}