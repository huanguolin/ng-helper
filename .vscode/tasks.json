// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "watch",
            "dependsOn": [
                "npm: watch:tsc",
                "npm: watch:esbuild"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "npm: watch:esbuild",
            "type": "shell",
            "command": "npm",
            "args": ["run", "watch:esbuild", "-w", "ng-helper"],
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
		{
            "label": "npm: watch:tsc",
            "type": "shell",
            "command": "npm",
            "args": ["run", "watch:tsc", "-w", "ng-helper"],
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
		{
            "label": "npm: watch-tests",
            "type": "shell",
            "command": "npm",
            "args": ["run", "watch-tests", "-w", "ng-helper"],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		}
	]
}
