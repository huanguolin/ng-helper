// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "dependsOn": [
                "plugin:watch:esbuild",
                "watch:tsc",
                "watch:esbuild"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch:esbuild",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch:esbuild",
                "-w",
                "ng-helper"
            ],
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "label": "watch:tsc",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch:tsc",
                "-w",
                "ng-helper",
            ],
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "label": "plugin:watch:esbuild",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch:esbuild",
                "-w",
                "@ng-helper/typescript-plugin"
            ],
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "label": "watch-tests",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch-tests",
                "-w",
                "ng-helper"
            ],
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "group": "watchers"
            },
            "group": "build"
        },
        {
            "label": "tests ",
            "dependsOn": [
                "watch",
                "watch-tests"
            ],
            "problemMatcher": []
        }
    ]
}