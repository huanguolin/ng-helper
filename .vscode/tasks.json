// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "dependsOn": [
                "plugin:watch:esbuild",
                "ext:watch:esbuild",
                "rpc:watch:esbuild"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ext:watch:esbuild",
            "type": "shell",
            "command": "yarn",
            "args": [
                "workspace",
                "ng-helper",
                "run",
                "watch:esbuild:ext"
            ],
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "label": "rpc:watch:esbuild",
            "type": "shell",
            "command": "yarn",
            "args": [
                "workspace",
                "ng-helper",
                "run",
                "watch:esbuild:rpc"
            ],
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "label": "plugin:watch:esbuild",
            "type": "shell",
            "command": "yarn",
            "args": [
                "workspace",
                "@ng-helper/typescript-plugin",
                "run",
                "watch:esbuild"
            ],
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        }
    ]
}